{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Redirects": {
    "ReactSpaAddress": "https://localhost:5173/"
  },
  "Clients": {
    "Catalogs": "http://localhost:4000",
    "Customers": "http://localhost:8000"
  },
  "InstrumentationName": "food-delivery.spa-bff",
  "OAuthOptions": {
    "CookieName": "__SPA-BFF",
    "ClientId": "spa-bff-code-flow",
    "ClientSecret": "secret",
    "ResponseType": "code",
    "ResponseMode": "query",
    "GetClaimsFromUserInfoEndpoint": true,
    "MapInboundClaims": false,
    "SaveTokens": true,
    "Scopes": [
      "offline_access",
      "openid",
      "profile",
      "catalogs:write",
      "catalogs:read",
      "catalogs:full",
      "customers:write",
      "customers:read",
      "customers:full",
      "gateway",
      "roles",
      "info"
    ],
    "Authority": "https://localhost:7001"
  },
  "AllowedHosts": "*",
  "OpenTelemetryOptions": {
    "OTLPOptions": {
      "OTLPGrpExporterEndpoint": "http://localhost:4317"
    },
    "AspireDashboardOTLPOptions": {
      "OTLPGrpExporterEndpoint": "http://localhost:4319"
    },
    "ZipkinOptions": {
      "HttpExporterEndpoint": "http://localhost:9411/api/v2/spans"
    },
    "JaegerOptions": {
      "OTLPGrpcExporterEndpoint": "http://localhost:14317",
      "HttpExporterEndpoint": "http://localhost:14268/api/traces"
    },
    "UsePrometheusExporter": true,
    "UseOTLPExporter": true,
    "UseAspireOTLPExporter": true,
    "UseGrafanaExporter": false,
    "ServiceName": "SpaBff"
  },
  "Yarp": {
    "Routes": {
      "catalogs": {
        "ClusterId": "catalogs",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Path": "/api/{version}/catalogs/{**remainder}"
        },
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/catalogs/{**remainder}"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeaderRemove": "X-Forwarded-For"
          },
          {
            "RequestHeaderRemove": "Forwarded"
          },
          {
            "RequestHeaderRemove": "X-Real-IP"
          },
          {
            "RequestHeaderRemove": "Cookie"
          },
          {
            "ResponseHeaderRemove": "Set-Cookie"
          }
        ]
      },
      "identity": {
        "ClusterId": "identity",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Path": "/api/{version}/identity/{**remainder}"
        },
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/identity/{**remainder}"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeaderRemove": "Cookie"
          },
          {
            "ResponseHeaderRemove": "Set-Cookie"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "https"
          }
        ]
      },
      "customers": {
        "ClusterId": "customers",
        "AuthorizationPolicy": "RequireAuthenticatedUserPolicy",
        "Match": {
          "Path": "/api/{version}/customers/{**remainder}"
        },
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{version}/customers/{**remainder}"
          },
          {
            "RequestHeadersCopy": true
          },
          {
            "RequestHeaderRemove": "Cookie"
          },
          {
            "ResponseHeaderRemove": "Set-Cookie"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "https"
          }
        ]
      }
    },
    "Clusters": {
      "catalogs": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "primary": {
            "Address": "http://localhost:4000/",
            "Health": "http://localhost:4000/health"
          }
        },
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": false
        }
      },
      "identity": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "primary": {
            "Address": "http://localhost:7000/"
          }
        }
      },
      "customers": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "primary": {
            "Address": "http://localhost:8000/"
          }
        }
      }
    }
  }
}