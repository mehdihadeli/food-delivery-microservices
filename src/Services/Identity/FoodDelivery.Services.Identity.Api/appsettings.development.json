{
  "SerilogOptions": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      },
      "Enabled": true
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "https://localhost:7000",
          "https://localhost:8000",
          "https://localhost:5000",
          "http://localhost:4000"
        ],
        "ValidIssuer": "dotnet-user-jwts"
      }
    }
  }
}



